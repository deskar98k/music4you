<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#292929"
    tools:context=".ui.AboutFragment">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/conteiner_bg"
        android:padding="20dp">

        <TextView
            android:id="@+id/text_about_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/text_about_label"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/app_text_font"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/text_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_about"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:fontFamily="@font/app_text_font"
            android:layout_below="@id/text_about_label"/>

    </RelativeLayout>


</RelativeLayout>
